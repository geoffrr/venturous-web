---
import ServiceCard from "@/components/ServiceCard.astro";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import PageHeader from "@/partials/PageHeader.astro";

const SERVICES_FOLDER = "services";

// Check if there's a services index page, otherwise use defaults
let servicesIndex;
try {
  servicesIndex = await getListPage(SERVICES_FOLDER, "-index");
  if (servicesIndex.data.draft) {
    return Astro.redirect("/404");
  }
} catch {
  // No index page, use defaults
  servicesIndex = {
    data: {
      title: "Services",
      meta_title: "Our Services",
      description: "Explore our range of services",
      image: "",
    },
  };
}

const services = await getSinglePage(SERVICES_FOLDER);
// Sort services by order field, then by ID as fallback
const sortedServices = services.sort((a, b) => {
  const orderA = a.data.order ?? 999;
  const orderB = b.data.order ?? 999;
  if (orderA !== orderB) {
    return orderA - orderB;
  }
  return a.id.localeCompare(b.id);
});
---

<Base
  title={servicesIndex.data.title}
  meta_title={servicesIndex.data.meta_title}
  image={servicesIndex.data.image}
  description={servicesIndex.data.description}
>
  <PageHeader title={servicesIndex.data.title} />
  <section class="section">
    <div class="container">
      <div class="row">
        {
          sortedServices.map((service) => (
            <div class="mb-14 md:col-6 lg:col-4">
              <ServiceCard data={service} />
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Base>
