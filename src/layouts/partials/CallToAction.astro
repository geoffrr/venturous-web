---
import ImageMod from "@/components/ImageMod.astro";
import { markdownify } from "@/lib/utils/textConverter";
const { call_to_action } = Astro.props;
---

{
  call_to_action.data.enable && (
    <section class="mb-28 w-full">
      <div class="container sm:max-w-full md:max-w-(--container-max-width)">
        <div class="card-secondary clip px-6 md:px-8 lg:px-10 py-8 lg:py-12 xl:p-16">
          <div class="row items-center justify-between">
            <div class="hidden md:block mb-10 w-[75%] mx-auto md:col-5 lg:col-5 md:order-2 md:mb-0 md:mt-10 lg:mt-0">
              <ImageMod
                class="w-full"
                src={call_to_action.data.image}
                width={600}
                height={400}
                alt="cta-image"
                format="webp"
              />
            </div>
            <div class="md:col-7 md:order-1 h-full flex flex-col flex-1 justify-between">
              <h2
                set:html={markdownify(call_to_action.data.title)}
                class="mb-2 md:whitespace-nowrap lg:whitespace-normal md:text-3xl md:mt-0"
              />
              <p
                set:html={markdownify(call_to_action.data.description)}
                class="mb-8 flex-1"
              />
              {call_to_action.data.button.enable && (
                <div class="mt-8 md:mt-0">
                  <a
                    class="btn btn-primary"
                    href={call_to_action.data.button.link}
                  >
                    {call_to_action.data.button.label}
                  </a>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
